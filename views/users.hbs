<h1> Users </h1>

<h2> Create User </h2>
<form action="/users/create" method="post">
    <label for="user_name">Enter name: </label>
    <input id="user_name" type="text" name="name_field" placeholder="Alison Burgers">
    <label for="user_email">Enter email: </label>
    <input id="user_email" type="email" name="email_field" placeholder="AlAhan@gmail.com">
    <label for="user_contact_number">Enter contact number: </label>
    <input id="user_contact_number" type="tel" name="contact_number_field" placeholder="9082 1934">
    <label for="user_password">Enter password: </label>
    <input id="user_password" type="password" name="password_field" placeholder="">
    <input type="submit" value="OK">
</form>

<hr />

<h2> List of Users </h2>
<table>
  <tr>
    <td>UserID</td>
    <td>Name</td>
    <td>Email</td>
    <td>Contact</td>
    <td>View Driver</td>
    <td>View Rider</td>
  </tr>
{{#each users}} 
  <tr>
    <td>{{this.userid}}</td>
    <td>{{this.name}}</td>
    <td>{{this.email}}</td>
    <td>{{this.contactnumber}}</td>
    <td>
      <form action="/users/assumeDriver" method="post">
        <input id="driver_user_id" type="number" name="user_id_field" value="{{this.userid}}" hidden="true">
        <input type="submit" value="Driver">
      </form>
    </td>
    <td>
      <form action="/users/assumeRider" method="post">
        <input id="rider_user_id" type="number" name="user_id_field" value="{{this.userid}}" hidden="true">
        <input type="submit" value="Rider">
      </form>
    </td>
    <td>
      <form action="/users/delete" method="post">
        <input id="rider_user_id" type="number" name="user_id_field" value="{{this.userid}}" hidden="true">
        <input type="submit" value="Delete">
      </form>
    </td>
  </tr>
{{/each}}
</table>



