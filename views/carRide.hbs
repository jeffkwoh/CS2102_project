<h1> Car Ride </h1>

<hr />

<table>
  <tr>
    <td> DriverID </td>
    <td> Date </td>
    <td> Time </td>
    <td> Trip start Location </td>
    <td> Destination </td>
  </tr>
  {{#with ride}}
    <tr>
      <td>{{driver}}</td>
      <td>{{date}}</td>
      <td>{{time}}</td>
      <td>{{origin}}</td>
      <td>{{destination}}</td>
    </tr>
  {{/with}}
</table>

<hr />

<table>
  <tr>
    <td> Bidder ID </td>
    <td> Bid amount </td>
  </tr>
  {{#each bids }}
    <tr>
      <td>{{this.bidder}}</td>
      <td>{{this.bidamount}}</td>
    </tr>
  {{/each}}
</table>
