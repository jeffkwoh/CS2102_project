<h1> Rider View </h1>

<hr />

<h2> Confirmed Rides </h2>
<table>
  <tr>
    <td> Date </td>
    <td> Time </td>
    <td> Trip start Location </td>
    <td> Destination </td>
  </tr>
  {{#each confirmedRides}}
    <tr>
      <td>{{this.date}}</td>
      <td>{{this.time}}</td>
      <td>{{this.startLocation}}</td>
      <td>{{this.endLocation}}</td>
      <td>
        <form action="/rides" method="get">
          <input id="ride_id" type="number" name="id" value="{{this.id}}" hidden="true">
          <input type="submit" value="View">
        </form>
      </td>
    </tr>
  {{/each}}
</table>

<h2> Rides that you have bid for</h2>
<table>
  <tr>
    <td> Date </td>
    <td> Time </td>
    <td> Trip start Location </td>
    <td> Destination </td>
  </tr>
  {{#each biddedRides}}
    <tr>
      <td>{{this.date}}</td>
      <td>{{this.time}}</td>
      <td>{{this.startLocation}}</td>
      <td>{{this.endLocation}}</td>
      <td>
        <form action="/bidding/create" method="post">
          <input id="ride_id" type="number" name="driver_field" value="{{this.id}}" hidden="true">
          <input type="submit" value="Edit">
        </form>
      </td>
    </tr>
  {{/each}}
</table>
